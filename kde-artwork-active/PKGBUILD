# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=kde-artwork-active
pkgver=0.3
pkgrel=1
pkgdesc="Artworks for Plasma Active"
arch=('any')
url='http://plasma-active.org/'
license=('LGPL')
makedepends=('kdelibs' 'cmake' 'automoc4')
groups=('plasma-active')
source=("http://download.kde.org/stable/active/3.0/src/${pkgname}-${pkgver}.tar.xz")
md5sums=('16ed2eadf9be37297ca21ae24c4f0d81')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/build"
  make DESTDIR="${pkgdir}" install
}
